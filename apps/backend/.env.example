# Example environment variables for the backend
# Copy this file to .env and fill in your actual values

# Database Configuration (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=your_db_password # <-- CHANGE THIS
DB_DATABASE=football_trivia

# Application Configuration
NODE_ENV=development
PORT=3001 # Port the NestJS app will run on

# JWT Secret (if using JWT auth later)
# JWT_SECRET=your_super_secret_key

# Clerk Authentication
CLERK_SECRET_KEY=clerk_secret_key
CLERK_WEBHOOK_SECRET=clerk_webhook_secret
CLERK_PUBLISHABLE_KEY=clerk_publishable_key

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_PORT=6379
REDIS_HOST=localhost

# Feature Flags
USE_REDIS_CACHING=true

# PostHog analytics
# Get your API key from PostHog (https://app.posthog.com or https://eu.posthog.com)
# Go to Project Settings > Project API Key
POSTHOG_API_KEY=your_posthog_api_key_here
# For EU region use: https://eu.i.posthog.com or https://eu.api.posthog.com
# For US region use: https://app.posthog.com or https://api.posthog.com
POSTHOG_HOST=https://eu.i.posthog.com

# Add other secrets/keys as needed (e.g., Stripe API keys) 
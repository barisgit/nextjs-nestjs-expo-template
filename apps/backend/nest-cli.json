{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "watchAssets": true,
    "tsConfigPath": "tsconfig.json"
  },
  "watchOptions": {
    "exclude": [
      "node_modules",
      "dist",
      "**/*.spec.ts",
      "**/test/**",
      "src/@generated/**",
      ".turbo"
    ]
  }
}

    "@nestjs/platform-socket.io": "^11.0.13",
    "@nestjs/typeorm": "^11.0.0",
    "@nestjs/websockets": "^11.0.13",
    "@repo/analytics": "workspace:*",
    "@repo/db": "workspace:*",
    "@repo/services": "workspace:*",
    "@repo/trpc": "workspace:*",
    "@repo/websockets": "workspace:*",
    "@trpc/server": "^11.0.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "joi": "^17.13.3",
    "jose": "^6.0.10",
    "node-fetch": "^3.3.2",
    "pg": "^8.14.1",
    "posthog-node": "^4.11.2",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "socket.io": "^4.8.1",
    "superjson": "^2.2.2",
    "svix": "^1.63.0",
    "typeorm": "^0.3.22",
    "zod": "^3.24.2"

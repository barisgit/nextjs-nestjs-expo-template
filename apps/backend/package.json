    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "socket.io-client": "^4.8.1",
    "source-map-support": "^0.5.21",
    "supertest": "^7.1.0",
    "trpc-ui": "^1.0.15",
    "ts-jest": "^29.3.1",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",

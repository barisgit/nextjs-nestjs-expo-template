{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@tsconfig/node-lts/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@repo/ui/*": ["../../packages/ui/src/*"],
      "@repo/backend/*": ["../../apps/backend/src/*"],
      "@repo/web/*": ["../../apps/web/src/*"],
      "@repo/mobile/*": ["../../apps/mobile/src/*"],
      "@repo/api-client/*": ["../../packages/api-client/src/*"],
      "@repo/db/*": ["../../packages/db/src/*"],
      "@repo/services/*": ["../../packages/services/src/*"],
      "@repo/trpc/*": ["../../packages/trpc/src/*"],
      "@repo/eslint-config/*": ["../../packages/eslint-config/src/*"],
      "@repo/analytics/*": ["../../packages/analytics/src/*"]
    },
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "incremental": false,
    "isolatedModules": true,
    "lib": ["es2022", "DOM", "DOM.Iterable"],
    "module": "NodeNext",
    "moduleDetection": "force",
    "moduleResolution": "NodeNext",
    "noUncheckedIndexedAccess": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2022",
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": false,
    "types": ["jest", "node"]
  }
}
